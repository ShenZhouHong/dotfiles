#
# bspwm hotkeys
#

# Exit bspwm
super + alt + Escape
	bspc quit

# close current window
super + w
	bspc window -c

#toggle monocle
super + t
	bspc desktop -l next

#equalize area
super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

#super + {grave,Tab}
#	bspc {window,desktop} -f last

#+ (hide|unhide) managed windows
super + a
    bspc control --toggle-visibility

super + apostrophe
	bspc window -s last

#last window
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

#flip desktop
super + shift + {_, ctrl} + space
    bspc desktop -F {vertical, horizontal}

#balance desktop


# super + shift + hjkl = move window to
# super + hjkl = move to window
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

#circulate the windows of the desktop
super + {comma,period}
	bspc desktop -C {backward,forward}

#Move through desktops
super + {Left,Right}
	bspc desktop -f {prev,next}


# @Move troughmonitors
super + shift + {Left,Right}
	bspc monitor -f {prev,next}

#split window in
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}
	
#resize window 1
super + alt + {Left,Down,Up,Right}
	bspc window -e {right -10,down +10,down -10,right +10}

#resize window 2
super + alt + {h,j,k,l}
	bspc window -e {right -10,down +10,down -10,right +10}

#set split ratio
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

#move window to desktop
#super + {_,shift,alt}+{1-9,0}
#bspc {desktop -f,window -d} ^{1-9,10}

super + {_,shift} + {1-8}
	bspc desktop -f "{1-2}:^{1-8}"

super + alt + {_,shift} + {1-8}
	bspc window -d "{1-2}:^{1-8}"

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + shift + {o,p}
	bspc desktop -R {270,90}

super + ctrl + alt + p
	bspc window -t pseudo_tiled

super + ctrl + {Left,Down,Up,Right}
	bspc window --presel {left,down,up,right}

#Kill window
super + ctrl + e
	bspc window --kill

# Change window gap
super + {minus,plus}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 )) 

lock + minus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2 )) 


# un/hide currently active window
super + {_,shift} + u
    ~/.config/bspwm/misc/toggle {hide,show}
    
# wm independent hotkeys


#lock 
super + shift + Delete
  bin/lock

#un/hide conky
super + q
	bin/show_conky.sh

# toggle italian|dvorak keyboard layout
super + Insert
  ~/bin/toggle_dvorak.sh

super + Return
	urxvt

hyper + space
    ~/bin/launcher
    # /usr/bin/lighthouse | sh
hyper + v
    ~/bin/dmenu/volume
hyper + c
    ~/bin/dmenu/clipboard
hyper + k
    ~/bin/dmenu/calculator
hyper + f
    ~/bin/dmenu/file
hyper + m
    clerk
hyper + p
    ~/bin/dmenu/power
    

super + z
    info-notify

super + e
	empty &

super + shift + e
	killall empty

super + F12
	amixer -q set Master 2+

super + F11
	amixer -q set Master 2-

super + End
  mpc toggle

super + Prior
  mpc previous

super + Next
  mpc next

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

ctrl + F1
	google-chrome-stable

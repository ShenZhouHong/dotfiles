#! /bin/sh
. panel_colors

num_mon=$(bspc query -M | wc -l)
PADDING=" "
current_monitor=$1

while read -r line ; do
    case $line in
        D*)
            # date output
            date="$PADDING%{F$COLOR_DATE}${line#?}%{F-}$PADDING"
            ;;
        C*)
            # clock output
            clock="$PADDING%{F$COLOR_CLOCK}${line#?}%{F-}$PADDING"
            ;;

            # uncomment for window title support
            T*)
            # xtitle output
            #title="${line#?}$PADDING$PADDING"
            if [[ -n ${line#?} ]]; then
                title="%{B$COLOR_TITLE_BG}%{F$COLOR_TITLE_FG}$PADDING${line:1:30}$PADDING%{F-}%{B-}"
            else
                title=""
            fi
            ;;

        V*)
            # alsa volume
            volume="$PADDING${line#?}$PADDING"
            ;;
        W*)
            # bspwm internal state
            wm_infos=""
            IFS=':'
            case $current_monitor in  # cut line to consider only interested monitor
                1)
                    line=${line:0:38}  #only consider 1st monitor 
                    set -- ${line#?}
                    ;;
                2)
                    line=${line:38}  #only consider 1st monitor 
                    set -- ${line}
                    ;;
            esac
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    M*)
                        # active monitor
                        if [ $num_mon -gt 1 ] ; then
                            name_cool=$([[ "$name" == 1 ]] && echo "\uf25b" || echo "\uf259")
                            # wm_infos="$wm_infos %{F$COLOR_ACTIVE_MONITOR_FG}%{B$COLOR_ACTIVE_MONITOR_BG}$PADDING${name_cool}$PADDING%{B-}%{F-}  "
                        fi
                        ;;
                    m*)
                        # inactive monitor
                        if [ $num_mon -gt 1 ] ; then
                            name_cool=$([ "$name" == 1 ] && echo "\uf25b" || echo "\uf259")
                            # wm_infos="$wm_infos %{F$COLOR_INACTIVE_MONITOR_FG}%{B$COLOR_INACTIVE_MONITOR_BG}$PADDING${name_cool}$PADDING%{B-}%{F-}  "
                        fi
                        ;;
                    O*)
                        # focused occupied desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        wm_infos="${wm_infos}%{F$COLOR_FOCUSED_OCCUPIED_FG}%{B$COLOR_FOCUSED_OCCUPIED_BG}%{U$COLOR_FOREGROUND}%{+o}$PADDING${name1}$PADDING%{-o}%{B-}%{F-}"
                        ;;
                    F*)
                        # focused free desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        wm_infos="${wm_infos}%{F$COLOR_FOCUSED_FREE_FG}%{B$COLOR_FOCUSED_FREE_BG}%{U$COLOR_FOREGROUND}%{+o}$PADDING${name1}$PADDING%{-o}%{B-}%{F-}"
                        ;;
                    U*)
                        # focused urgent desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        wm_infos="${wm_infos}%{F$COLOR_FOCUSED_URGENT_FG}%{B$COLOR_FOCUSED_URGENT_BG}%{U$COLOR_FOREGROUND}%{+o}$PADDING${name1}$PADDING%{-o}%{B-}%{F-}"
                        ;;
                    o*)
                        # occupied desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        wm_infos="${wm_infos}%{F$COLOR_OCCUPIED_FG}%{B$COLOR_OCCUPIED_BG}%{A:bspc desktop -f ${name}:}$PADDING${name1}$PADDING%{A}%{B-}%{F-}"
                        ;;
                    f*)
                        # free desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        # ALERT: chdesktop function is declared in ~/.zsh_aliases
                        # I did not use an hardwritten command because lemonbar %{A} tag doesn't like colons
                        wm_infos="${wm_infos}%{F$COLOR_FREE_FG}%{B$COLOR_FREE_BG}%{A:bspc desktop -f ${name}:}$PADDING${name1}$PADDING%{A}%{B-}%{F-}"
                        ;;
                    u*)
                        # urgent desktop
                        name1=$(echo -n -e $name | tail -c 3)
                        wm_infos="${wm_infos}%{F$COLOR_URGENT_FG}%{B$COLOR_URGENT_BG}$PADDING${name1}$PADDING%{B-}%{F-}"
                        ;;
                esac
                shift
            done
            ;;
        P*)
            pom_rem=${line#?}
            if [ -n "$pom_rem" ]; then
                case $pom_rem in
                    P*)
                        color_pom=$COLOR_POMODORO_ACTIVE
                        pom_rem=$PADDING${pom_rem#?}$PADDING
                        ;;
                    p*)
                        color_pom=$COLOR_POMODORO_PAUSE
                        pom_rem=$PADDING${pom_rem#?}$PADDING
                        ;;
                    n*)
                        color_pom=$COLOR_POMODORO_INACTIVE
                        pom_rem=${pom_rem#?}
                        ;;
                esac
            else
                color_pom=$COLOR_POMODORO_INACTIVE
            fi

            pom="%{F$color_pom}$PADDING%{A:pomodoro start:}%{A3:pomodoro stop:}\uf058${pom_rem}%{A}%{A}%{F-}"
            ;;
        R*)
            # music info
            music="%{B$COLOR_FOCUSED_OCCUPIED_BG}%{F$COLOR_FOCUSED_OCCUPIED_FG}$PADDING${line#?}$PADDING%{F-}%{B-}"
            ;;
        m*)
            #music controls only
            music="$PADDING${line#?}"
            ;;
        I*)
            #IP
            ip="$PADDING${line#?}$PADDING"
            ;;
    esac
    #printf "%s\n" "%{l}${wm_infos}%{Sf}%{c}${music}%{r}${volume}${date}${clock}"
    case $current_monitor in
        1)
            echo -e "%{l}${music}${volume}%{c}${wm_infos}%{r}${pom}${date}${clock}"
            ;;
        2)
            echo -e "%{l}${wm_infos}%{c}${music}%{r}${ip}"
            ;;
    esac
done
